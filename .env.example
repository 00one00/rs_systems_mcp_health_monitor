# RS Systems Health Monitor Configuration

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/rs_systems
# Alternative individual settings (if not using DATABASE_URL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rs_systems
DB_USER=username
DB_PASSWORD=password

# Django Settings
DJANGO_SETTINGS_MODULE=rs_systems.settings
DJANGO_SECRET_KEY=your-secret-key-here

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=rs-systems-media
S3_DAMAGE_PHOTOS_PREFIX=damage-photos/

# Monitoring Thresholds
# Database monitoring
ALERT_THRESHOLD_DB_QUERY_MS=500
ALERT_THRESHOLD_DB_CONNECTIONS_PCT=80
ALERT_THRESHOLD_DB_LOCK_WAIT_MS=1000

# Queue monitoring
ALERT_THRESHOLD_QUEUE_STUCK_HOURS=24
ALERT_THRESHOLD_QUEUE_DEPTH=100
ALERT_THRESHOLD_PENDING_REPAIRS=50

# API monitoring
ALERT_THRESHOLD_API_RESPONSE_MS=2000
ALERT_THRESHOLD_API_ERROR_RATE_PCT=5
ALERT_THRESHOLD_API_REQUESTS_PER_MIN=1000

# Storage monitoring
ALERT_THRESHOLD_S3_STORAGE_GB=100
ALERT_THRESHOLD_S3_COST_USD=500
ALERT_THRESHOLD_PHOTO_SIZE_MB=10

# Activity monitoring
ALERT_THRESHOLD_INACTIVE_TECHNICIANS_HOURS=2
ALERT_THRESHOLD_LOW_ACTIVITY_HOURS=4

# Monitoring Configuration
MONITORING_INTERVAL_SECONDS=30
HEALTH_CHECK_INTERVAL_SECONDS=60
METRICS_RETENTION_DAYS=30

# Alert Configuration
ALERT_ENABLED=true
ALERT_COOLDOWN_MINUTES=15

# Slack Integration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#rs-systems-alerts
SLACK_USERNAME=RS Health Monitor

# Email Alerts (optional)
EMAIL_ALERT_ENABLED=false
EMAIL_ALERT_FROM=monitoring@rssystems.com
EMAIL_ALERT_TO=admin@rssystems.com,tech-team@rssystems.com
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password

# MCP Server Configuration
MCP_SERVER_NAME=rs-health-monitor
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_PORT=8080
MCP_WEBSOCKET_ENABLED=true
MCP_WEBSOCKET_PORT=8081

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/rs-health-monitor/health.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Redis Cache (optional, for metrics storage)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# Environment
ENVIRONMENT=development  # development, staging, production

# Feature Flags
ENABLE_DATABASE_MONITORING=true
ENABLE_API_MONITORING=true
ENABLE_QUEUE_MONITORING=true
ENABLE_S3_MONITORING=true
ENABLE_ACTIVITY_MONITORING=true
ENABLE_PREDICTIVE_ALERTS=false

# Performance Tuning
MAX_CONCURRENT_MONITORS=5
CONNECTION_POOL_SIZE=20
QUERY_TIMEOUT_SECONDS=30

# Security
API_KEY=your-secure-api-key-here
ENABLE_SSL_VERIFICATION=true